<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:paddingTop="10dp"
    tools:context=".a_menu.TentangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="70"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:id="@+id/idfoto"
            android:layout_gravity="center"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/idbtngantipoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:text="Ubah Foto"
            android:textAllCaps="false" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="30dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_person"
                        android:layout_gravity="center"
                        android:layout_height="30dp" />

                    <EditText
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        android:focusableInTouchMode="false"
                        android:id="@+id/idnamadpnt"
                        android:hint="Nama Depan"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_person"
                        android:layout_gravity="center"
                        android:layout_height="30dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Nama Belakang"
                        android:inputType="textPersonName"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:focusableInTouchMode="false"
                        android:id="@+id/idnamablkt"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_weight="1"
                        android:id="@+id/btnlokasit"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_alamat"
                        android:layout_gravity="center"
                        android:layout_height="30dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="textPersonName"
                        android:hint="Alamat"
                        android:focusableInTouchMode="false"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/idalamatt"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_pass"
                        android:layout_gravity="center"
                        android:layout_height="30dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Kata Sandi"
                        android:inputType="textPersonName"
                        android:focusableInTouchMode="false"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/idkatasandit"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <ProgressBar
                    android:layout_width="match_parent"
                    android:id="@+id/idtunggut"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="match_parent"
                    android:text="Keluar"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/idbtnkeluart"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="Teknik Informatika"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:text="Politeknik Negeri Banyuwangi"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>