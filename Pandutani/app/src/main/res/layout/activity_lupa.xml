<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:paddingTop="20dp"
    tools:context=".a_menu.LupaActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_weight="80"
        android:src="@drawable/farmer"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="30"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="30dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_person"
                android:layout_gravity="center"
                android:layout_height="30dp" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/idnamadpnl"
                android:hint="Verifikasi Nama Depan"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_person"
                android:layout_gravity="center"
                android:layout_height="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:hint="Verifikasi Kode Enkripsi"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/idnamablkl"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pass"
                android:layout_gravity="center"
                android:layout_height="30dp" />
            <EditText
                android:layout_width="match_parent"
                android:hint="Kata Sandi Baru"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:id="@+id/idkatasandil"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pass"
                android:layout_gravity="center"
                android:layout_height="30dp" />
            <EditText
                android:layout_width="match_parent"
                android:hint="Verifikasi Kata Sandi Baru"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/idkatasandi2l"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:id="@+id/idtunggul"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="Simpan"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@color/cardview_light_background"
            android:id="@+id/idbtnubahpassl"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>