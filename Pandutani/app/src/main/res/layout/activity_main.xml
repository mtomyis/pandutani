<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
    tools:context=".a_menu.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3.5"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/idpengingat"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableLeft="@drawable/alarmclock25"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:text="    Pengingat" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="2.5"
        android:weightSum="2"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:text="    Prosedur"
                    android:drawableLeft="@drawable/plan25"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:id="@+id/idprosedur"
                    android:textAllCaps="false"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/plant25"
                android:text="    Tanaman Pangan"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:id="@+id/idtanaman"
                android:textAllCaps="false"
                android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="Hama"
                android:drawableLeft="@drawable/hamja25"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:id="@+id/idhama"
                android:background="@android:color/transparent"
                android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="    Diskusi"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/group25"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:id="@+id/iddiskusi"
                android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:text="    Tentang"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/info25"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:id="@+id/idtentang"
            android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>