<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:paddingTop="20dp"
    tools:context=".a_menu.LoginActivity">

    <ImageView
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_weight="65"
        android:src="@drawable/farmer"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="35"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_person"
                android:layout_gravity="center"
                android:layout_height="30dp" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/idnamadpnm"
                android:hint="Nama Depan"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pass"
                android:layout_gravity="center"
                android:layout_height="30dp" />
            <EditText
                android:layout_width="match_parent"
                android:hint="Kata Sandi"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/idkatasandim"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:id="@+id/idtunggum"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:text="Masuk"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:textColor="@color/cardview_light_background"
                android:background="@android:color/holo_blue_light"
                android:id="@+id/idbtnmasukm"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:textColor="@color/cardview_light_background"
                android:layout_margin="5dp"
                android:text="Daftar"
                android:background="@android:color/holo_blue_light"
                android:id="@+id/idbtndaftarm"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/idbtnlupam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:text="Lupa Kata Sandi"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            tools:text="Lupa Kata Sandi" />

    </LinearLayout>

</LinearLayout>